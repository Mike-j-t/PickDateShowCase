<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pickdate_outer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:layout_margin="0dp">

    <LinearLayout
        android:id="@+id/pickdate_inner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:id="@+id/pickdate_datedisplay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20pt" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/month_subtract"
                style="@style/pickdate_adjustbutton"
                android:onClick="subtractMonth"
                android:text="-Month" />

            <Button
                android:id="@+id/month_add"
                style="@style/pickdate_adjustbutton"
                android:onClick="addMonth"
                android:text="Month+" />

            <Button
                android:id="@+id/year_subtract"
                style="@style/pickdate_adjustbutton"
                android:onClick="subtractYear"
                android:text="-Year" />

            <Button
                android:id="@+id/year_add"
                style="@style/pickdate_adjustbutton"
                android:onClick="addYear"
                android:text="Year+" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pickdate_columnheaders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:id="@+id/pickdate_c1hdr"
                style="@style/pickdate_dategridcolumnheader"
                android:text="Mon" />

            <TextView
                android:id="@+id/pickdate_c2hdr"
                style="@style/pickdate_dategridcolumnheader"
                android:text="Tue" />

            <TextView
                android:id="@+id/pickdate_c3hdr"
                style="@style/pickdate_dategridcolumnheader"
                android:text="Wed" />

            <TextView
                android:id="@+id/pickdate_c4hdr"
                style="@style/pickdate_dategridcolumnheader"
                android:text="Thu" />

            <TextView
                android:id="@+id/pickdate_c5hdr"
                style="@style/pickdate_dategridcolumnheader"
                android:text="Fri" />

            <TextView
                android:id="@+id/pickdate_c6hdr"
                style="@style/pickdate_dategridcolumnheader"
                android:text="Sat" />

            <TextView
                android:id="@+id/pickdate_c7hdr"
                style="@style/pickdate_dategridcolumnheader"
                android:text="Sun" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/pickdate_r1"
            style="@style/pickdate_daterow">

            <TextView
                android:id="@+id/pickdate_r1c1"
                style="@style/pickdate_cell" />

            <TextView
                android:id="@+id/pickdate_r1c2"
